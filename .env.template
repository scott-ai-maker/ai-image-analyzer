# Production Environment Configuration Template
# Copy this to .env and fill in your actual values

# =============================================================================
# AZURE COMPUTER VISION CONFIGURATION
# =============================================================================
# Get these values from your Azure Computer Vision resource
# Portal: Azure Portal > Your Computer Vision Resource > Keys and Endpoint
AZURE_COMPUTER_VISION_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your-32-character-subscription-key-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (disable in production)
DEBUG=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server host and port
HOST=0.0.0.0
PORT=8000

# Server name for OpenAPI documentation
SERVER_NAME=AI Image Analyzer

# API version
API_VERSION=1.0.0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
# Use "*" for development only, specify domains for production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# RATE LIMITING
# =============================================================================
# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=30

# Metrics collection interval in seconds
METRICS_INTERVAL=60

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Secret key for JWT tokens (generate a secure random string)
SECRET_KEY=your-super-secret-key-here-change-in-production

# Maximum request size in bytes (10MB default)
MAX_REQUEST_SIZE=10485760

# Request timeout in seconds
REQUEST_TIMEOUT=30

# =============================================================================
# AZURE SPECIFIC SETTINGS
# =============================================================================
# Azure Computer Vision API version
AZURE_CV_API_VERSION=2023-10-01

# Maximum retry attempts for Azure API calls
AZURE_MAX_RETRIES=3

# Retry delay in seconds
AZURE_RETRY_DELAY=1

# Request timeout for Azure API calls
AZURE_REQUEST_TIMEOUT=30