# Environment Configuration for AI Image Analyzer
# Copy this file to .env and fill in your Azure credentials

# Azure Computer Vision
AZURE_COMPUTER_VISION_ENDPOINT=https://your-computer-vision.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your-computer-vision-key-here

# Azure OpenAI (for GPT-4V descriptions)
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_KEY=your-openai-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-vision-preview

# Azure Blob Storage (for image persistence)
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string-here
AZURE_STORAGE_CONTAINER_NAME=images

# Application Settings
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here
LOG_LEVEL=INFO

# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Streamlit Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Processing Settings
MAX_IMAGE_SIZE_MB=10
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,bmp,gif,tiff
ANALYSIS_TIMEOUT_SECONDS=30
